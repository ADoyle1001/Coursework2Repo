<html lang="en">
<head>
{{>header}}
</head>
<body class="container">
    <h1 class="display-4">{{title}}</h1>
    <h2 class="display-4">Add New Coursework</h2> 

<form method="post" role="form">

  <div class="form-group">
    <label for="title">CourseworkTitle</label>
    <input type="text" class="form-control" id="title" name="title" placeholder="Coursework title..." required>
  </div>

  <div class="form-group">
    <label for="module">Modules</label>
    <input type="text" class="form-control" id="module" name="module" placeholder="Coursework modules..." required>
  </div>

  <div class="form-group">
    <label for="milestone">Milestones</label>
    <input type="text" class="form-control" id="milestone" name="milestone" placeholder="Milestones..." required>
  </div>

   <div class="form-group">
    <label for="due">Due</label>
    <input type="date" class="form-control" id="due" name="due" placeholder="Due Date..." required>
  </div>

  <div class="form-group">
    <label for="completed">Completed</label>
    <input type="date" class="form-control" id="completed" name="compelted" placeholder="Date Completed..." required>
  </div>
  

  <div class="form-group">
    <input type="submit" value="post entry" class="btn btn-primary">
  </div>
</form>
</body>
</html>
